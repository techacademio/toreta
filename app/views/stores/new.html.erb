<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">店舗登録</div>
      <div class="panel-body">
        <%= form_for(@store) do |f| %>
          <div class="form-group">
            <%= f.label :store, '店舗名' %>
            <%= f.text_field :store, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :address, '住所' %>
            <%= f.text_field :address, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :tel_num, '電話番号(ハイフンなし)' %>
            <%= f.text_field :tel_num, class: 'form-control' %>
          </div>
          
          <div class="text-right">
            <%= f.submit '登録', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>