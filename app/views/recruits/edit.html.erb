<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
    <div class="panel panel-default">
      <div class="panel-heading">求人情報登録</div>
      <div class="panel-body">
        <%= form_for(@recruit) do |f| %>
        
          <div class="form-group">
            <%= f.label :store_ids, '対象店舗' %>
            <%= f.collection_select(:store_ids, current_company.stores, :id, :store, class: "form-control input-sm") %>
          </div>
          
          <div class="form-group">
            <%= f.label :agent, '掲載求人媒体' %>
            <%= f.text_field :agent, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :startdate, '掲載開始日' %>
            <%= f.date_field :startdate, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :enddate, '掲載終了日' %>
            <%= f.date_field :enddate, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :cost, '掲載費用' %>
            <%= f.number_field :cost, min:0, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :area, '対象エリア' %>
            <%= f.text_field :area, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :application_num, '応募人数' %>
            <%= f.number_field :application_num, min:0, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :interview_num, '面接人数' %>
            <%= f.number_field :interview_num, min:0, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :employ_num, '採用人数' %>
            <%= f.number_field :employ_num, min:0, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :memo, '備考欄' %>
            <%= f.text_area :memo, class: 'form-control' %>
          </div>
          
          <div class="text-right">
            <%= f.submit '変更', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>